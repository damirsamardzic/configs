# Pulse Audio controls
set $VolPercent 2
# increase volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +"$VolPercent"% && dunstify -i audio-speakers -t 2000 -r 20 "$(~/.config/i3/pavolume)"
bindsym $mod+plus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +"$VolPercent"% && dunstify -i audio-speakers -t 2000 -r 20 "$(~/.config/i3/pavolume)"
# decrease volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -"$VolPercent"% && dunstify -i audio-speakers -t 2000 -r 20 "$(~/.config/i3/pavolume)"
bindsym $mod+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -"$VolPercent"% && dunstify -i audio-speakers -t 2000 -r 20 "$(~/.config/i3/pavolume)"
# mute volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && dunstify -i audio-speakers -t 2000 -r 20 "$(~/.config/i3/pavolume)"
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 0 toggle && pactl set-source-mute 1 toggle

