set $Locker i3lock -ec 000000 && sleep 1
#set $Locker i3lock -ef -c 000000 -i $lockimage && sleep 1
bindsym $mod+l exec --no-startup-id $Locker

#set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $mode_system System: (l) lock, (e) logout, (s) sleep, (h) hibernate, (d) hybrid-sleep, (r) reboot, (Shift+s) shutdown  |  Monitor: (o) LCD, (i) HDMI-LCD, (b) DP-LCD, (m) DP-DP, (p) DP                 
mode "$mode_system" {
  bindsym l exec --no-startup-id $Locker, mode "default"
  # run laptop-only.sh script to have only laptop display output
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
  bindsym d exec --no-startup-id $Locker && systemctl hybrid-sleep, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

  bindsym o exec --no-startup-id /home/damirs/.screenlayout/eDP-1.sh, mode "default"
  bindsym i exec --no-startup-id /home/damirs/.screenlayout/HDMI-2__eDP-1.sh, mode "default"
  #bindsym b exec --no-startup-id /home/damirs/.screenlayout/DP-2-2__eDP-1.sh, mode "default"
  bindsym b exec --no-startup-id /home/damirs/.screenlayout/DP-2-2__eDP-1__vertical.sh, mode "default"
  #bindsym m exec --no-startup-id /home/damirs/.screenlayout/DP2-2.sh && /home/damirs/.screenlayout/DP2-2__DP2-3.sh, mode "default"
  bindsym m exec --no-startup-id /home/damirs/.screenlayout/DP-2-2__DP-2-3.sh, mode "default"
  bindsym p exec --no-startup-id /home/damirs/.screenlayout/DP-2-2.sh, mode "default"
  
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"

set $mode_keymap Keyboard layout: (h) hr, (u) us 
mode "$mode_keymap" {
  bindsym h exec --no-startup-id setxkbmap hr, mode "default"
  bindsym u exec --no-startup-id setxkbmap us, mode "default"
  
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+k mode "$mode_keymap"

