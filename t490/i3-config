bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -d intel_backlight s +2% && dunstify -i display -t 2000 -r 10 "$(~/.config/i3/brightness)"  # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -d intel_backlight s 2%- && dunstify -i display -t 2000 -r 10 "$(~/.config/i3/brightness)"  # decrease screen brightness

